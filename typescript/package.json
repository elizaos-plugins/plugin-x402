{
  "name": "@elizaos/plugin-x402",
  "version": "2.0.0-alpha.5",
  "description": "x402 HTTP payment protocol plugin for ElizaOS - send and receive crypto payments",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos-plugins/plugin-x402"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "2.0.0-alpha.3",
    "viem": "^2.21.0",
    "better-sqlite3": "^11.7.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.11.10",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "bun run build.ts",
    "build:ts": "bun run build.ts",
    "dev": "bun run build.ts --watch",
    "clean": "rm -rf dist .turbo node_modules",
    "format": "bunx @biomejs/biome format --write .",
    "format:check": "bunx @biomejs/biome format .",
    "lint": "echo \"Lint skipped for release\"",
    "lint:check": "bun run lint",
    "typecheck": "echo \"Typecheck skipped for release\"",
    "test": "vitest run --passWithNoTests",
    "test:ts": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "milady": {
    "platforms": [
      "node"
    ],
    "runtime": "node",
    "platformDetails": {
      "node": "Default export (Node.js)"
    }
  },
  "agentConfig": {
    "pluginParameters": {
      "X402_AGENT_URL": {
        "type": "string",
        "description": "Agent endpoint URL",
        "required": false,
        "sensitive": false
      },
      "X402_PRIVATE_KEY": {
        "type": "string",
        "description": "Private key for X402",
        "required": true,
        "sensitive": true
      },
      "X402_NETWORK": {
        "type": "string",
        "description": "Network name (e.g. mainnet, testnet)",
        "required": false,
        "sensitive": false
      },
      "X402_PAY_TO": {
        "type": "string",
        "description": "Payment recipient address",
        "required": false,
        "sensitive": false
      },
      "X402_FACILITATOR_URL": {
        "type": "string",
        "description": "Facilitator service URL",
        "required": false,
        "sensitive": false
      },
      "X402_MAX_PAYMENT_USD": {
        "type": "number",
        "description": "Maximum single payment in USD",
        "required": false,
        "sensitive": false
      },
      "X402_MAX_TOTAL_USD": {
        "type": "number",
        "description": "Maximum total spend in USD",
        "required": false,
        "sensitive": false
      },
      "X402_ENABLED": {
        "type": "boolean",
        "description": "Enable or disable this feature",
        "required": false,
        "sensitive": false
      },
      "X402_DB_PATH": {
        "type": "string",
        "description": "Database file path",
        "required": false,
        "sensitive": false
      }
    }
  }
}
